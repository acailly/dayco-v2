{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["external-libs/"],
  "rules": {
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["types-check.js", "lint-check.js"],
      "env": {
        "node": true
      },
      "parserOptions": {
        "sourceType": "commonjs"
      }
    },
    {
      "files": ["*.mjs"]
    }
  ]
  
}
