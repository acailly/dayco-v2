{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["external-libs/"],
  "rules": {
    "no-var": "error"
  },
  "plugins": ["@html-eslint"],
  "overrides": [
    {
      "files": ["types-check.js", "lint-check.js"],
      "env": {
        "node": true
      },
      "parserOptions": {
        "sourceType": "commonjs"
      }
    },
    {
      "files": ["*.mjs"]
    },
    {
      "files": ["*.html"],
      "parser": "@html-eslint/parser",
      "extends": ["plugin:@html-eslint/recommended"]
    }
  ]
}
